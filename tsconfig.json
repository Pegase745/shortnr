{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "config",
    "dist",
    "server"
  ],
  "awesomeTypescriptLoaderOptions": {
    "silent": true
  }
}
